.navigation {
  display: flex;
  align-items: center;
  padding-top: 15px
  padding-bottom: 10px
}

.navigation__prev,
.navigation__next {
  width: 17px
  height: 17px
  padding: 0
  margin: 0
  border-radius: 4px
  border: 1px solid #dfdfdf
  background-color: transparent
  box-shadow: inset 0 0 3px 0 grayAccent;
  position: relative;
  font-size: 8px
  cursor: pointer;

  &:before {
    display: block;
    width: 0;
    height: 0;
    content: "";
    position: absolute;
    top: 50%;
    border-style: solid;
    border-color: transparent grayAccent grayAccent transparent;
    border-width: 2px;
  }
}

.navigation__prev:before {
  left: calc(50% + 2px);
  transform: translate(-50%, -50%) rotate(135deg)
}

.navigation__next:before {
  left: calc(50% - 2px);
  transform: translate(-50%, -50%) rotate(-45deg)
}

.navigation__date {
  padding: 0 12px;
}


.navigation__tooltip {
  margin: 0 10px;
  color: grayAccent;
  border: 1px solid #dfdfdf
  background-color: transparent
  box-shadow: inset 0 0 3px 0 grayAccent;
  border-radius: 4px
  padding: 3px 6px
  font-size: 12px
}
