.fastEvent {
  background-color: #fff;
  border: 1px solid #ccc;
  width: 305px
  height: 105px
  padding: 25px 25px 25px 20px
  position: absolute;
  box-sizing: border-box;
  border-radius: 2px

  &::before {
    triangle();
    left: 20px;
  }

  .fastEvent__input {
    width: 100%
    padding: 3px 0
    padding-left: 5px
    display: flex;
    align-items center
    box-sizing: border-box;
    margin-bottom: 10px
  }

  .fastEvent__submit {
  }

  .close {
    position: absolute;
    top: 3px
    right: 7px
    left: auto;
    color: grayAccent;
    cursor: pointer;
  }
}
